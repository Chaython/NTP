{
  "manifest_version": 3,
  "name": "Custom NTP",
  "version": "1.0",
  "description": "A custom New Tab Page with weather, search, history, bookmarks and customization.",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "geolocation",
    "history",
    "bookmarks"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{}",
      "strict_min_version": "58.0"
    }
  },
  "host_permissions": [
    "https://api.openweathermap.org/"
  ],
  "icons": {
    "128": "icon.png"
  }
}